{
  "manifest_version": 2,
  "name": "BrakeValve",
  "description": "Look before you buy!",
  "version": "0.1.0",
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["http://store.steampowered.com/app/*"],
      "js": ["main.min.js"],
      "css": ["main.min.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
